{{ if eq .chezmoi.os "linux" -}}
#! /bin/sh

install() {
	dpkg -l $1 | grep -q ^ii && return 1
	sudo apt -y install $1
	return 0
}

PACKAGES="git curl wget zsh ripgrep exuberant-tags tmux npm python3 python3-pip bear git-delta"
for PACKAGE in ${PACKAGES}; do
	install ${PACKAGES};
done

sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
git clone https://github.com/spaceship-prompt/spaceship-prompt.git "$HOME/.oh-my-zsh/custom/themes/spaceship-prompt" --depth=1
ln -s "$HOME/.oh-my-zsh/custom/themes/spaceship-prompt/spaceship.zsh-theme" "$HOME/.oh-my-zsh/custom/themes/spaceship.zsh-theme"
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting"
[ -f $HOME/.config/nvim ] && mv $HOME/.config/nvim $HOME/.config/nvim_old
git clone https://github.com/AstroNvim/AstroNvim ~/.config/nvim
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
source "$HOME/.cargo/env"

cargo install tree-sitter-cli
cargo install fd-find

{{ else if eq .chezmoi.os "darwin" -}}
#! /bin/sh

install() {
	brew list $1 > /dev/null || brew install $1
}

FORMULAES="wget curl neovim ripgrep sshs ctags fd tmux lazygit gdu bear bottom tree-sitter npm git-delta"
for FORMULAE in ${FORMULAES}; do
	install ${FORMULAE}
done

sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)"
git clone https://github.com/spaceship-prompt/spaceship-prompt.git "$HOME/.oh-my-zsh/custom/themes/spaceship-prompt" --depth=1
ln -s "$HOME/.oh-my-zsh/custom/themes/spaceship-prompt/spaceship.zsh-theme" "$HOME/.oh-my-zsh/custom/themes/spaceship.zsh-theme"
git clone https://github.com/zsh-users/zsh-syntax-highlighting.git "$HOME/.oh-my-zsh/custom/plugins/zsh-syntax-highlighting"
[ -f $HOME/.config/nvim ] && mv $HOME/.config/nvim $HOME/.config/nvim_old
git clone https://github.com/AstroNvim/AstroNvim ~/.config/nvim
curl --proto '=https' --tlsv1.2 -sSf https://sh.rustup.rs | sh
source "$HOME/.cargo/env"

cargo install tree-sitter-cli

{{ end -}}
